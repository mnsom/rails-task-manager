<div class="container mt-3">
  <h1>My tasks</h1>
  <div class="list">
    <% @tasks.each do |task| %>
      <p>
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to '🗑️',  task_path(task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      </p>
    <% end %>
  </div>
  <p><%= link_to 'Add a new task', new_task_path, class:'btn btn-primary mt-2'%></p>
</div>
